v1 = []
v2 = []
nbdepart = 0
produit = 0.0
taille = int(input("Entrez la taille de vos vecteurs [entre 1 et 10] ? "))

print("Saisie du premier vecteur :")
for loop in range(taille):
    nb = int(input(f"v1[{nbdepart}] = "))
    v1.append(nb)
    nbdepart = nbdepart + 1

nbdepart = 0

print("Saisie du second vecteur :")
for loop in range(taille):
    nb = int(input(f"v2[{nbdepart}] = "))
    v2.append(nb)
    nbdepart = nbdepart + 1

for i in range(len(v1)):
    produit = produit + v1[i] * v2[i]

print(f"Le produit scalaire de v1 par v2 vaut {produit}")
